{
  "compilerOptions": {
    // --- Layout ---
    "rootDir": ".",
    "outDir": "dist",

    // --- Módulos/Runtime ---
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Node16",
    "moduleDetection": "force",
    "lib": ["ES2023"],
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // --- Emisión/Mapas ---
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // --- Checks estrictos ---
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // --- Estilo/Compat ---
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true

    // "jsx": "react-jsx"  // déjalo si realmente usas React en este repo
  },
  "include": ["src", "api", "scripts"],
  "exclude": ["node_modules"]
}